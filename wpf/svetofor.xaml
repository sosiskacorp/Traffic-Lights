<UserControl x:Class="wpf.svetofor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:wpf"
             mc:Ignorable="d" Width="105.5" Height="304.898">
    <Grid>
        <Ellipse x:Name="red" Fill="#FFD42105" HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="100"/>
        <Ellipse x:Name="yellow" Fill="#FF119B04" HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="100" Margin="0,105,0,0" RenderTransformOrigin="0.5,0.5"/>
        <Ellipse x:Name="green" Fill="#FFDADA05" HorizontalAlignment="Left" Height="100" Stroke="Black" VerticalAlignment="Top" Width="100" Margin="0,210,0,0"/>

    </Grid>
</UserControl>
